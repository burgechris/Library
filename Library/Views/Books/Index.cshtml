
@using Library.Models;
@model List<Library.Models.Book>;

<h1>Books</h1>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 

@foreach (Book book in Model)
{
  <li>@Html.ActionLink($"{book.BookTitle}", "Details", new { id = book.BookId}) | @Html.ActionLink("remove this book", "Delete", new { id = book.BookId})</li>
}
<br>
<p>@Html.ActionLink("Add new book", "Create")</p>

